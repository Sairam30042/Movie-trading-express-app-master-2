<%- include('../partials/header.ejs')%>
    <div class="container-fluid h-75">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <div id="content">
                    <div id="india">
                        <div>
                            <div>
                                <img src="../images/lord-of-the-flies-alternative-movie-poster-movie-poster-boy.jpeg"
                                    width="200px" height="250px">
                                <span class="fl">
                                    <h4 class="old-ch">Movie Name:</h4> &nbsp;<span class="mt-11">
                                        <%= review.movie_name%>
                                    </span>
                                </span>
                                <span class="fl">
                                    <h4 class="old-ch">Genre:</h4> &nbsp;<span class="mt-11">
                                        <%= review.genre%>
                                    </span>
                                </span>
                                
                                <span class="fl">
                                    <h4 class="old-ch">Release:</h4> &nbsp;<span class="mt-11">
                                        <%= review.release%>
                                    </span>
                                </span>
                                <span class="fl">
                                    <h4 class="old-ch">Status:</h4> &nbsp;<span class="mt-11">
                                        <%= review.status%>
                                    </span>
                                </span>
                                <span class="fl">
                                    <h4 class="old-ch">Posted on:</h4> &nbsp;<span class="mt-11">
                                        <%= review.createdAt%>
                                    </span>
                                </span>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <h2 class="old-ch">Review</h2>
                    <p id="hpad">
                        <%= review.review%>
                    </p>
                    <% if(user == review.author._id ) { %>
                    <form class="ml-10">
                        <button type="submit" class="btn btn-success" formmethod="GET"
                            formaction="/reviews/<%= review.id %>/edit">Edit</button>
                        <button type="submit" class="btn btn-danger" formmethod="POST"
                            formaction="/reviews/<%= review.id %>?_method=DELETE">Delete</button>
                    </form>
                    <% } %>
                    <form class="ml-10">
                    <%if(!(user== review.author._id)&&review.status=="Available"){%>

                        <button type="submit" class="btn btn-success" formmethod="GET"
                        formaction="/reviews/<%= review.id %>/trade">Trade</button>
                        <%if(review.Watchlist===false){%>
                            
                            <button class="btn btn-success" formaction="/reviews/<%= review.id%>/watchlist" formmethod="Post" type="submit" >
                              Watch
                            </button>
                        <%}else{%>
                          <button class="btn btn-danger" formaction="/reviews/<%= review.id%>/savedelete?_method=delete"
                            formmethod="Post" type="submit">UnWatch</button>
                        <%}%>
                        <%}%>
                    </form>

                </div>
                <div class="row">
                    <img src="../images/review.png" class="ml-350" alt="" width="400" height="400">
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>